[gd_scene load_steps=2 format=3 uid="uid://avatarpick"]
[ext_resource type="Script" path="res://scripts/AvatarPick.gd" id="1"]

; Root ─────────────────────────────────────────────────────────────────────
[node name="AvatarPick" type="Control"]
layout_mode = 3
anchors_preset = 15
anchor_right = 1.0
anchor_bottom = 1.0
grow_horizontal = 2
grow_vertical = 2
script = ExtResource("1")

; Background — Desert Sand #F7EDD8 ─────────────────────────────────────────
[node name="BG" type="ColorRect" parent="."]
layout_mode = 1
anchors_preset = 15
anchor_right = 1.0
anchor_bottom = 1.0
color = Color(0.969, 0.929, 0.847, 1)

; Outer margin ──────────────────────────────────────────────────────────────
[node name="Margin" type="MarginContainer" parent="."]
layout_mode = 1
anchors_preset = 15
anchor_right = 1.0
anchor_bottom = 1.0
theme_override_constants/margin_left = 40
theme_override_constants/margin_right = 40
theme_override_constants/margin_top = 28
theme_override_constants/margin_bottom = 20

; Main vertical stack ────────────────────────────────────────────────────────
[node name="VBox" type="VBoxContainer" parent="Margin"]
layout_mode = 2
theme_override_constants/separation = 18

; Header row ────────────────────────────────────────────────────────────────
[node name="Header" type="HBoxContainer" parent="Margin/VBox"]
layout_mode = 2
theme_override_constants/separation = 16

[node name="BackMenuBtn" type="Button" parent="Margin/VBox/Header"]
layout_mode = 2
text = "← Menu"
custom_minimum_size = Vector2(110, 48)

[node name="TitleLabel" type="Label" parent="Margin/VBox/Header"]
layout_mode = 2
size_flags_horizontal = 3
text = "Choose Your Tribe & Avatar"
horizontal_alignment = 1
theme_override_font_sizes/font_size = 32

[node name="HeaderSpacer" type="Control" parent="Margin/VBox/Header"]
layout_mode = 2
custom_minimum_size = Vector2(110, 0)

; Separator ──────────────────────────────────────────────────────────────────
[node name="HSep" type="HSeparator" parent="Margin/VBox"]
layout_mode = 2

; Content: left tribe grid + right avatar panel ──────────────────────────────
[node name="Content" type="HBoxContainer" parent="Margin/VBox"]
layout_mode = 2
size_flags_vertical = 3
theme_override_constants/separation = 20

; ── Left panel: tribe selection ─────────────────────────────────────────────
[node name="LeftPanel" type="PanelContainer" parent="Margin/VBox/Content"]
layout_mode = 2
size_flags_horizontal = 3
size_flags_stretch_ratio = 0.42

[node name="LeftVBox" type="VBoxContainer" parent="Margin/VBox/Content/LeftPanel"]
layout_mode = 2
theme_override_constants/separation = 12

[node name="TribeHint" type="Label" parent="Margin/VBox/Content/LeftPanel/LeftVBox"]
layout_mode = 2
text = "Tap a tribe to meet its people:"
horizontal_alignment = 1
theme_override_font_sizes/font_size = 16
modulate = Color(0.5, 0.38, 0.2, 1)

[node name="TribeScroll" type="ScrollContainer" parent="Margin/VBox/Content/LeftPanel/LeftVBox"]
layout_mode = 2
size_flags_vertical = 3

; Script populates this grid with tribe buttons ──────────────────────────────
[node name="TribeGrid" type="GridContainer" parent="Margin/VBox/Content/LeftPanel/LeftVBox/TribeScroll"]
layout_mode = 2
columns = 3
size_flags_horizontal = 3
theme_override_constants/h_separation = 10
theme_override_constants/v_separation = 10

; ── Right panel: avatar display (hidden until tribe selected) ────────────────
[node name="RightPanel" type="PanelContainer" parent="Margin/VBox/Content"]
layout_mode = 2
size_flags_horizontal = 3
size_flags_stretch_ratio = 0.58
visible = false

[node name="RightScroll" type="ScrollContainer" parent="Margin/VBox/Content/RightPanel"]
layout_mode = 2

[node name="RightVBox" type="VBoxContainer" parent="Margin/VBox/Content/RightPanel/RightScroll"]
layout_mode = 2
size_flags_horizontal = 3
theme_override_constants/separation = 14

; Tribe title + trait ────────────────────────────────────────────────────────
[node name="TribeTitleLabel" type="Label" parent="Margin/VBox/Content/RightPanel/RightScroll/RightVBox"]
layout_mode = 2
theme_override_font_sizes/font_size = 26
horizontal_alignment = 1

[node name="TribeTraitLabel" type="Label" parent="Margin/VBox/Content/RightPanel/RightScroll/RightVBox"]
layout_mode = 2
theme_override_font_sizes/font_size = 15
horizontal_alignment = 1
autowrap_mode = 3
modulate = Color(0.35, 0.27, 0.1, 1)

; Avatar 2x2 grid — script fills this ────────────────────────────────────────
[node name="AvatarGrid" type="GridContainer" parent="Margin/VBox/Content/RightPanel/RightScroll/RightVBox"]
layout_mode = 2
columns = 2
size_flags_horizontal = 3
theme_override_constants/h_separation = 12
theme_override_constants/v_separation = 12

; Verse preview box ──────────────────────────────────────────────────────────
[node name="VersePanel" type="PanelContainer" parent="Margin/VBox/Content/RightPanel/RightScroll/RightVBox"]
layout_mode = 2

[node name="VerseVBox" type="VBoxContainer" parent="Margin/VBox/Content/RightPanel/RightScroll/RightVBox/VersePanel"]
layout_mode = 2
theme_override_constants/separation = 6

[node name="VerseRefLabel" type="Label" parent="Margin/VBox/Content/RightPanel/RightScroll/RightVBox/VersePanel/VerseVBox"]
layout_mode = 2
theme_override_font_sizes/font_size = 14
modulate = Color(0.6, 0.45, 0.1, 1)

[node name="VerseTextLabel" type="Label" parent="Margin/VBox/Content/RightPanel/RightScroll/RightVBox/VersePanel/VerseVBox"]
layout_mode = 2
autowrap_mode = 3
theme_override_font_sizes/font_size = 14

; Back-to-tribes button (inside right panel) ────────────────────────────────
[node name="BackTribeBtn" type="Button" parent="Margin/VBox/Content/RightPanel/RightScroll/RightVBox"]
layout_mode = 2
text = "← All Tribes"
custom_minimum_size = Vector2(0, 44)
